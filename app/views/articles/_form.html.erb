<%= render 'shared/errors', obj: @article %>
<div class="row">
   <div class="col-md-12">
	    <%= form_for @article, :html=>{class:"form-horizontal", role:"form"}   do |f| %>
	<div class="form-group row">
	   <div  class="col-sm-2 col-form-label">
		<%=  f.label :title %>
	   </div>
	   <div class="col-sm-10">
	 	<%= f.text_field :title , class: "form-control", placeholder: "Title of article", autofocs: true %>
	   </div>
	</div>
	<div class="form-group row">
	    <div class="col-sm-2 col-form-label">
		<%= f.label :description %>
	     </div>
	    <div class="col-sm-10">
		 <%= f.text_area :description , rows:10, class: "form-control", placeholder: "Descriptions" %>
	    </div>
	</div>
	<div class="form-group row">
	     <div class="col-sm-2 col-form-label">
             </div>
            <div class="col-sm-10">
	      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
		      <% cb.label(class: "form-check form-check-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text} %>
	      <% end %>
            </div>
	</div>
	<div class="form-group row">
		<div class="col-md-4 offset-md-2">
	 	   <%= f.submit class:'btn btn-primary btn-lg'  %>
	    </div>
	</div>
<%end %>
<div class="col-md-4 offset-md-4">	
	[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
   </div>
</div>
